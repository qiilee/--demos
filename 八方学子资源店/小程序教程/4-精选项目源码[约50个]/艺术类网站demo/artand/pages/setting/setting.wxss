.container {
    background: #eee;
}
.avatar {
    width: 100px;
    height: 100px;
    border-radius: 50%;
    margin-top: 40px;
}

.section {
    margin: 40px;
    width: 100%;
    display: flex;
    flex-direction: column;
}
.item {
    font-size: 15px;
    margin-top: 10px;
    padding: 10px 15px;
    width: 100%;
    background: #fff;
    display: flex;
}
.icon {
    width: 25px;
    height: 25px;
}
.pay-text {
    line-height: 25px;
    padding: 0px 15px;
}
