page{
    height: 100%;
    width: 100%;
}
.container{
    height: 100%;
    overflow: hidden;
}
.scroll{
    display: flex;
    flex-direction: column;
    align-items: center;
}
#swiper{
    height: 750rpx;
}
.swiper-image{
    width: 100%;
    height: 100%;
}
.name{
    text-align: center;
    margin: 10px 0;
    display: block;
}
.options{
    display: flex;
    justify-content: center;
    margin: 10px 0;
}
.option{
    width: 26px;
    height: 26px;
    margin: 0 10px;
}
.gobuy{
    margin: 5px 0;
    text-align: center;
}
.gobuy button{
    color: #fff;
    background: #4F94CD;
    width: 90%;
    margin: 0 5px;
}
.comment{
    padding: 20px;
    border-top: 1px solid #eee;
    width: 100%;
    box-sizing: border-box;
}
.comment-content{
    font-size: 14px;
    line-height: 24px;
    margin: 10px;
}
.comment-time{
    width: 100%;
    text-align: right;
    font-size: 10px;
    margin: 10px;
}
.same{
    background: #f6f6f6;
}
.same .head{
    font-size: 14px;
    line-height: 36px;
    padding: 0 10px;
}
.nine{
    display: flex;
    flex-wrap: wrap;
    margin: -10rpx 0 10rpx;
}
.nine .item{
    padding: 10rpx;
    width: 229rpx;
    height: 229rpx;
    overflow: hidden;
}
.nine image{
    width: 229rpx;
    height: 229rpx;
}