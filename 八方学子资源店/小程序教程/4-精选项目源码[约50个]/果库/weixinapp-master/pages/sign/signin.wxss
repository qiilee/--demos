page{
    height: 100%;
    color: #fff;
    font-size: 16px;
}
.container{
    background: rgba(0,0,0,0.8);
    display: flex;
    flex-direction: column;
    align-items: center;
}
.gosignup{
    align-self: flex-end;
    padding: 12px;
    color: #fff;
}
.img{
    width: 132px;
    height: 80px;
    margin: 60px 0 0;
}
.form{
    text-align: center;
}
label{
    display: flex;
    font-size: 16px;
    border-bottom: 1px solid #aaa;
    margin: 5px;
}
input{
    text-align: initial;
    width: 500rpx;
    font-size: 16px;
    padding: 0 12px;
}
.submit{
    margin: 20px 0;
    display: block;
    background: #aaa;
}
.tips{
    color: #f00;
    display: block;
}